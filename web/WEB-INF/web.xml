<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSession</servlet-name>
        <servlet-class>za.ac.tut.web.StartSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddingServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Subtract</servlet-name>
        <servlet-class>za.ac.tut.web.Subtract</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MultiplyServlet</servlet-name>
        <servlet-class>za.ac.tut.web.MultiplyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DivideServlet</servlet-name>
        <servlet-class>za.ac.tut.web.DivideServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.EndSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSession</servlet-name>
        <url-pattern>/StartSession.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddingServlet</servlet-name>
        <url-pattern>/AddingServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Subtract</servlet-name>
        <url-pattern>/Subtract.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MultiplyServlet</servlet-name>
        <url-pattern>/MultiplyServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DivideServlet</servlet-name>
        <url-pattern>/DivideServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionServlet</servlet-name>
        <url-pattern>/EndSessionServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
